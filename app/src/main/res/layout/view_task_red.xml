<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_task_red_root"
    android:layout_width="225dp"
    android:layout_height="70dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_task_red"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/frame_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/zhiwu" />

        <TextView
            android:id="@+id/tv_good_name"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="8"
            android:text="香水郁金香香水郁金香"
            android:textColor="#fff"
            android:textSize="12dp"
            android:visibility="gone" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_middle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_has_finished_part"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="8"
                android:text="已完成15.5%"
                android:textColor="#fff"
                android:textSize="12dp" />


            <ImageView
                android:id="@+id/iv_progress"
                android:layout_width="85dp"
                android:layout_height="7dp"
                android:background="@color/colorAccent"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_middle"
                android:layout_width="90dp"
                android:layout_height="23dp"
                android:background="@drawable/shape_task_button_red"
                android:gravity="center"
                android:text="补差价购买"
                android:textColor="#fff"
                android:textSize="12dp" />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_right"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="7dp">

        <FrameLayout
            android:id="@+id/frame_arrow_right_click"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/iv_arrow_right"
                android:layout_width="12dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:background="@drawable/arrow_down" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_close_right_click"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/iv_close_right"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/close" />
        </FrameLayout>

    </FrameLayout>


</LinearLayout>