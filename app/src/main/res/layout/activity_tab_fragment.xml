<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tl="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:orientation="vertical">

    <bro.tuibida.com.view.NoScrollViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="84dp"/>

    <com.flyco.tablayout.CommonTabLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/tab_layout"
            android:layout_width="227dp"
            android:layout_height="46dp"
            android:background="#131320"
            tl:tl_indicator_height="20dp"
            tl:tl_indicator_width="46dp"
            tl:tl_indicator_margin_top="13dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            tl:tl_indicator_color="#E7BB84"
            tl:tl_textsize="13sp"
            tl:tl_divider_padding="13sp"
            tl:tl_divider_color="#6C7B8A"
            tl:tl_divider_width="1dp"
            tl:tl_textSelectColor="#0E0A1C"
            tl:tl_textUnselectColor="#6C7B8A"
            tl:tl_iconVisible="false"
            tl:tl_indicator_margin_left="5dp"
            tl:tl_indicator_margin_right="5dp"
            tl:tl_indicator_style="BLOCK"
            tl:tl_indicator_anim_enable="true"
            tl:tl_indicator_anim_duration="600"
            tl:tl_indicator_bounce_enable="true"/>
</LinearLayout>
